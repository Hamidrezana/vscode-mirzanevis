{
  "name": "vscode-mirzanevis",
  "author": "Hamidreza Nazemi",
  "license": "MIT",
  "displayName": "Mirzanevis - React, Typescript Snippets",
  "description": "Useful React and Typescript code snippets and commands",
  "version": "0.3.0",
  "publisher": "Hamidrezana",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hamidrezana/vscode-mirzanevis.git"
  },
  "keywords": [
    "React",
    "React JS",
    "React Snippets",
    "Typescript",
    "Typescript Snippets"
  ],
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:extension.new-page-module"
  ],
  "main": "./dist/extension",
  "contributes": {
    "snippets": [
      {
        "language": "javascriptreact",
        "path": "./snippets/snippets.code-snippets"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/snippets-ts.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/snippets.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets-ts.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "extension.new-page-module",
        "title": "Mirzanevise: New Page Module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.new-page-module",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.182",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4"
  }
}